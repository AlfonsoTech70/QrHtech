<!-- item_sensor.xml -->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@color/azul">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/txtDispositivo"
            android:layout_width="206dp"
            android:layout_height="48dp"
            android:textColor="@color/white"
            android:textSize="20sp"
            android:text="Id Dispositivo:"/>

        <TextView
            android:id="@+id/txtIdDispositivo"
            android:layout_width="206dp"
            android:layout_height="48dp"
            android:textColor="@color/white"
            android:textSize="20sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/textoSector"
            android:layout_width="206dp"
            android:layout_height="48dp"
            android:ems="10"
            android:inputType="text"
            android:textSize="20sp"
            android:textColor="@color/white"
            android:hint="Sector:"
            android:textColorHint="@color/white"/>

        <Spinner
            android:id="@+id/spinnerSectores1"
            android:layout_width="206dp"
            android:layout_height="48dp"
            android:ems="10"
            android:hint="-"
            android:inputType="text"
            android:textColor="@color/white"
            android:textColorHint="@color/white"
            android:textSize="20sp"
            android:background="@color/gray"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/textoSistema"
            android:layout_width="206dp"
            android:layout_height="48dp"
            android:ems="10"
            android:inputType="text"
            android:textSize="20sp"
            android:textColor="@color/white"
            android:hint="Tipo de Sector:"
            android:textColorHint="@color/white"/>

        <Spinner
            android:id="@+id/spinnerTipo1"
            android:layout_width="206dp"
            android:layout_height="48dp"
            android:inputType="text"
            android:textSize="20sp"
            android:textColor="@color/white"
            android:hint="-"
            android:textColorHint="@color/white"
            android:background="@color/gray"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/intervalo"
            android:layout_width="206dp"
            android:layout_height="48dp"
            android:textColor="@color/white"
            android:textSize="20sp"
            android:text="Intervalo:"/>

        <EditText
            android:id="@+id/txtIntervalo"
            android:layout_width="206dp"
            android:layout_height="48dp"
            android:textColor="@color/white"
            android:textSize="20sp" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/conectado"
            android:layout_width="206dp"
            android:layout_height="48dp"
            android:textColor="@color/white"
            android:textSize="20sp"
            android:text="Conectado:"/>

        <EditText
            android:id="@+id/txtConectado"
            android:layout_width="206dp"
            android:layout_height="48dp"
            android:textColor="@color/white"
            android:textSize="20sp" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/rssi"
            android:layout_width="206dp"
            android:layout_height="48dp"
            android:textColor="@color/white"
            android:textSize="20sp"
            android:text="Rssi:"/>

        <EditText
            android:id="@+id/txtRssi"
            android:layout_width="206dp"
            android:layout_height="48dp"
            android:textColor="@color/white"
            android:textSize="20sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/unidades"
            android:layout_width="206dp"
            android:layout_height="48dp"
            android:text="Unidades:"
            android:textColor="@color/white"
            android:textSize="20sp" />

        <EditText
            android:id="@+id/txtUnidades"
            android:layout_width="206dp"
            android:layout_height="48dp"
            android:textColor="@color/white"
            android:textSize="20sp"
            android:layout_marginBottom="30dp"/>
    </LinearLayout>
</LinearLayout>



